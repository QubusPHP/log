{
    "name": "qubus/log",
    "type": "library",
    "description": "A PSR-3 logger that uses Flysystem, S3, and Swiftmailer.",
    "keywords": [
        "psr",
        "psr-3",
        "logger",
        "flysystem",
        "s3",
        "aws",
        "swiftmailer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/log": "^3",
        "qubus/exception": "^2.0",
        "qubus/filesystem": "^2.0",
        "qubus/mail": "^2.0",
        "qubus/support": "^2.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Log\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qubus\\Tests\\Log\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
